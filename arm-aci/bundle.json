        },
        "azure_location": {
            "defaultValue": "useast",
            "type": "string"
        }
    },
    "credentials": {
        "tenant_id": {
            "env": "AZURE_TENANT_ID"
        },
        "client_id": {
            "env": "AZURE_CLIENT_ID"
        },
        "client_secret": {
            "env": "AZURE_CLIENT_SECRET"
        },
        "subscription_id": {
            "env": "AZURE_SUBSCRIPTION_ID"
        }
    }
